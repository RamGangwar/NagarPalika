@using NagarPalika.Application.Commands.TradeCategorys
@model CreateTradeCategoryCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.TradeCategoryId > 0)
                {
                    <h5 class="modal-title">Edit Trade Category</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Trade Category</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditTradeCategory", "TradeLicence", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditTradeCategory", enctype = "multipart/form-data" }))
            {

                <div class="col-md-12">
                    @Html.HiddenFor(h=>h.TradeCategoryId)
                    @Html.LabelFor(l=>l.TradeCategoryName,"Trade Category*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.TradeCategoryName,new{@class="form-control", placeholder="Trade Category"})
                    @Html.ValidationMessageFor(v=>v.TradeCategoryName)
                </div>
                <div class="col-md-12">
                    @Html.LabelFor(l=>l.TermAndCondition,"Term & Condition*" ,new{@class="form-label"})
                    @Html.TextAreaFor(m=>m.TermAndCondition,new{@class="form-control", placeholder="Term & Condition"})
                    @Html.ValidationMessageFor(v=>v.TermAndCondition)
                </div>


                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

