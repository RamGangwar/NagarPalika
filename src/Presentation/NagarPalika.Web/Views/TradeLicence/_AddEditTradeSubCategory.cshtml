@using NagarPalika.Application.Commands.TradeSubCategorys
@model CreateTradeSubCategoryCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.TradeSubCategoryId > 0)
                {
                    <h5 class="modal-title">Edit Trade Sub Category</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Trade Sub Category</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditTradeSubCategory", "TradeLicence", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditTradeSubCategory", enctype = "multipart/form-data" }))
            {
                <div class="col-md-6">

                    @Html.LabelFor(l=>l.TradeCategoryId,"Trade Category*" ,new{@class="form-label"})
                    @Html.DropDownListFor(m=>m.TradeCategoryId,new SelectList(ViewBag.TradeCate,"TradeCategoryId","TradeCategoryName"),"Select Trade Category",new{@class="form-control"})
                    @Html.ValidationMessageFor(v=>v.TradeCategoryId)
                </div>
                <div class="col-md-6">
                    @Html.HiddenFor(h=>h.TradeSubCategoryId)
                    @Html.LabelFor(l=>l.TradeSubCategoryName,"Trade Sub Category*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.TradeSubCategoryName,new{@class="form-control", placeholder="Trade Sub Category"})
                    @Html.ValidationMessageFor(v=>v.TradeSubCategoryName)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(l=>l.Fees,"Fees*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.Fees,new{@class="form-control", placeholder="Fees"})
                    @Html.ValidationMessageFor(v=>v.Fees)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(l=>l.TermAndCondition,"Term & Condition*" ,new{@class="form-label"})
                    @Html.TextAreaFor(m=>m.TermAndCondition,new{@class="form-control", placeholder="Term & Condition"})
                    @Html.ValidationMessageFor(v=>v.TermAndCondition)
                </div>


                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

