@using NagarPalika.Application.Commands.Departments
@model CreateDepartmentCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.DepartmentId > 0)
                {
                    <h5 class="modal-title">Edit Department</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Department</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditDepartment", "Masters", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditDepartment" }))
            {
                <div class="col-md-6">
                    @Html.HiddenFor(h=>h.DepartmentId)
                    @Html.LabelFor(l=>l.DepartmentName,"Department Name*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.DepartmentName,new{@class="form-control", placeholder="Department Name"})
                    @Html.ValidationMessageFor(v=>v.DepartmentName)
                </div>


                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>
