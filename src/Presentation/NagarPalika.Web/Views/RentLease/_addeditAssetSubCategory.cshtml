@using NagarPalika.Application.Commands.AssetSubCategorys
@model CreateAssetSubCategoryCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.AssetSubCategoryId > 0)
                {
                    <h5 class="modal-title">Edit Asset Category</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Asset Category</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditAssetSubCategory", "RentLease", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditAssetSubCategory", enctype = "multipart/form-data" }))
            {

                <div class="col-md-12">
                    @Html.LabelFor(l=>l.AssetCategoryId,"Asset Category*" ,new{@class="form-label"})
                    @Html.DropDownListFor(m=>m.AssetCategoryId,new SelectList(ViewBag.CategoryList,"AssetCategoryId","AssetCategoryName"),"Select Asset Category",new{@class="form-control"})
                    @Html.ValidationMessageFor(v=>v.AssetCategoryId)
                </div>
                <div class="col-md-12">
                    @Html.HiddenFor(h=>h.AssetSubCategoryId)
                    @Html.LabelFor(l=>l.AssetSubCategoryName,"Asset Sub Category*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.AssetSubCategoryName,new{@class="form-control", placeholder="Asset Sub Category"})
                    @Html.ValidationMessageFor(v=>v.AssetSubCategoryName)
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>

                </div>
            }
        </div>
    </div>
</div>

