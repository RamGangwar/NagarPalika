@using NagarPalika.Application.Commands.AssetCategorys
@model CreateAssetCategoryCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.AssetCategoryId > 0)
                {
                    <h5 class="modal-title">Edit Asset Category</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Asset Category</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditAssetCategory", "RentLease", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditAssetCategory", enctype = "multipart/form-data" }))
            {

                <div class="col-md-12">
                    @Html.HiddenFor(h=>h.AssetCategoryId)
                    @Html.LabelFor(l=>l.AssetCategoryName,"Asset Category*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.AssetCategoryName,new{@class="form-control", placeholder="Asset Category"})
                    @Html.ValidationMessageFor(v=>v.AssetCategoryName)
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    
                </div>
            }
        </div>
    </div>
</div>

