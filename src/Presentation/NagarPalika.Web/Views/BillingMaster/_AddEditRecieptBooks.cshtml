@using NagarPalika.Application.Commands.RecieptBookss
@model CreateRecieptBooksCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.RecieptBookId > 0)
                {
                    <h5 class="modal-title">Edit Reciept Book</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Reciept Book</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditRecieptBooks", "BillingMaster", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditRecieptBooks", enctype = "multipart/form-data" }))
            {

                @Html.HiddenFor(h=>h.RecieptBookId)
                @Html.HiddenFor(h=>h.BookType)
                <div class="col-md-6">
                   
                    @Html.LabelFor(l=>l.AllowcatedTo,"Allowcate To*" ,new{@class="form-label"})
                    @Html.DropDownListFor(m=>m.AllowcatedTo,new SelectList(ViewBag.EmpList,"EmployeeId","EmployeeName"),"Select Allowcate To",new{@class="form-control"})
                    @Html.ValidationMessageFor(v=>v.AllowcatedTo)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(l=>l.RecieptBook,"Reciept Book*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.RecieptBook,new{@class="form-control", placeholder="Reciept Book"})
                    @Html.ValidationMessageFor(v=>v.RecieptBook)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(l=>l.StartSrNo,"Start Sr. No*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.StartSrNo,new{@class="form-control", placeholder="Start Sr. No"})
                    @Html.ValidationMessageFor(v=>v.StartSrNo)
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(l=>l.EndSrNo,"End Sr. No*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.EndSrNo,new{@class="form-control", placeholder="End Sr. No"})
                    @Html.ValidationMessageFor(v=>v.EndSrNo)
                </div>


                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>
