@using NagarPalika.Application.Commands.ConstructionTypes
@model CreateConstructionTypeCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.ConstructionTypeId > 0)
                {
                    <h5 class="modal-title">Edit Construction Type</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Construction Type</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditConstructionType", "BillingMaster", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditConstructionType", enctype = "multipart/form-data" }))
            {
                
                <div class="col-md-6">
                    @Html.HiddenFor(h=>h.ConstructionTypeId)
                    @Html.LabelFor(l=>l.ConstructionTypeName,"Construction Type*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.ConstructionTypeName,new{@class="form-control", placeholder="Construction Type"})
                    @Html.ValidationMessageFor(v=>v.ConstructionTypeName)
                </div>
                            

                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>
