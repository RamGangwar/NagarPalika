@using NagarPalika.Application.Commands.RoadWidthTypes
@model CreateRoadWidthTypeCommand


<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            @{
                if (Model.RoadWidthTypeId > 0)
                {
                    <h5 class="modal-title">Edit Road Width Type</h5>
                }
                else
                {
                    <h5 class="modal-title">Add Road Width Type</h5>
                }
            }

            <button type="button" class="btn-close popupclose" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

            @using (Html.BeginForm("AddEditRoadWidthType", "BillingMaster", FormMethod.Post, new { @class = "row g-3", id = "frmAddEditRoadWidthType", enctype = "multipart/form-data" }))
            {
                
                <div class="col-md-6">
                    @Html.HiddenFor(h=>h.RoadWidthTypeId)
                    @Html.LabelFor(l=>l.RoadWidthTypeName,"Road Width Type*" ,new{@class="form-label"})
                    @Html.TextBoxFor(m=>m.RoadWidthTypeName,new{@class="form-control", placeholder="Road Width Type"})
                    @Html.ValidationMessageFor(v=>v.RoadWidthTypeName)
                </div>
                            

                <div class="text-end">
                    <button type="button" class="btn btn-secondary popupclose" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>
